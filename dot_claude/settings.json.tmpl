{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "ENABLE_TOOL_SEARCH": "true",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "OTEL_METRICS_EXPORTER": "otlp",
    "OTEL_LOGS_EXPORTER": "otlp",
    "OTEL_EXPORTER_OTLP_PROTOCOL": "http/json",
    "OTEL_EXPORTER_OTLP_ENDPOINT": "{{ output "sh" "-c" "op read 'op://Personal/CC Dashboard/endpoint' 2>/dev/null || jq -r '.env.OTEL_EXPORTER_OTLP_ENDPOINT' ~/.claude/settings.json 2>/dev/null || echo ''" | trim }}",
    "OTEL_EXPORTER_OTLP_HEADERS": "Authorization=Bearer {{ output "sh" "-c" "op read 'op://Personal/CC Dashboard/token' 2>/dev/null || jq -r '.env.OTEL_EXPORTER_OTLP_HEADERS' ~/.claude/settings.json 2>/dev/null | sed 's/Authorization=Bearer //' || echo ''" | trim }}",
    "OTEL_RESOURCE_ATTRIBUTES": "repository={{ output "whoami" | trim }}-global"
  },
  "permissions": {
    "allow": [
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(npm run:*)",
      "Bash(pnpm:*)",
      "Bash(npx:*)",
      "Bash(node --version:*)",
      "Bash(wc:*)",
      "Bash(xh:*)",
      "Bash(grepai status:*)",
      "Bash(grepai init:*)",
      "Bash(grepai watch:*)",
      "Bash(mise ls-remote:*)",
      "Bash(mise use:*)",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "Skill(naming-review)",
      "Skill(session-retrospective)",
      "mcp__chrome-devtools__new_page",
      "mcp__chrome-devtools__list_pages",
      "mcp__chrome-devtools__navigate_page",
      "mcp__chrome-devtools__take_screenshot"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(rm --recursive --force:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "command -v pnpm >/dev/null && [ -f package.json ] && grep -q '\"fix\"' package.json && pnpm fix 2>/dev/null || true"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "AskUserQuestion|ExitPlanMode|EnterPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/notify-stop.sh"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/notify-stop.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/notify-stop.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "code-simplifier@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "gopls-lsp@claude-plugins-official": true,
    "php-lsp@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "serena@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true,
    "vercel@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true,
    "figma@claude-plugins-official": true,
    "superpowers@claude-plugins-official": true,
    "sentry@claude-plugins-official": true,
    "claude-md-management@claude-plugins-official": true
  },
  "language": "Japanese"
}
